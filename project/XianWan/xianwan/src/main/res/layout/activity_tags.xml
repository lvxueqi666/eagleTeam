            android:text="数字算盘文字类"
            android:textSize="23sp"
            android:textColor="#ffffff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/radius"
            android:padding="5dp"
